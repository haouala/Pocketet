        <StackPanel x:ConnectionId='5' Name="list"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <StackPanel x:ConnectionId='6' x:Name="stackPanel"  HorizontalAlignment="Left" Margin="10,10,0,10" Orientation="Vertical" Width="280">
                <StackPanel x:ConnectionId='7' x:Name="stackPanel2" Margin="0,0,0,0" Background="#FF104197"  Height="50" >
                    <TextBlock x:ConnectionId='14'  TextWrapping="WrapWholeWords" Text=" name " Name="name" FontSize="18" Foreground="White"  ></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">

                    <Image x:ConnectionId='8' Name="img" Source="/Assets/ser.png" Height="160" Stretch="Fill" Margin="0,0,1,0" Width="150" />
                    <StackPanel x:ConnectionId='9' x:Name="stackPanel1" Margin="0,2,2,2" Width="140"  Orientation="Vertical">
                        <StackPanel x:ConnectionId='10' x:Name="stackPanel3"  Margin="2,2,2,2" Orientation="Horizontal" Height="78" Background="#FF1B609B">
                            <TextBlock x:ConnectionId='13' TextWrapping="WrapWholeWords" Text=" contact " x:Name="contact" FontSize="13" Foreground="White" Margin="0,0,0,0" />
                            <Image  Width="20" Source="/Assets/phone.png" Margin="-25,0,0,0"/>
                        </StackPanel>
                        <StackPanel x:ConnectionId='11' x:Name="stackPanel4"  Margin="2,2,2,2"  Orientation="Horizontal" Height="78" Background="#FF3597D5" >
                            <TextBlock x:ConnectionId='12' TextWrapping="WrapWholeWords" Text=" location " x:Name="location" FontSize="13" Foreground="White" Margin="0,0,0,0" />
                            <Image  Width="20" Source="/Assets/map.png" Margin="-25,0,0,0"/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </StackPanel>



    </Grid>
