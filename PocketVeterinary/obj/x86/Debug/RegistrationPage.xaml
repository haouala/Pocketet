<Page
    x:Class="PocketVeterinary.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PocketVeterinary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="nameT" HorizontalAlignment="Left" Margin="43,145,0,0" TextWrapping="Wrap" Text="name" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='2' x:Name="usernameT" HorizontalAlignment="Left" Margin="45,195,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='3' x:Name="passwordT" HorizontalAlignment="Left" Margin="37,255,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='4' x:Name="name" HorizontalAlignment="Left" Margin="144,140,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="181"/>
        <TextBox x:ConnectionId='5' x:Name="username" HorizontalAlignment="Left" Margin="145,195,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="175"/>
        <TextBox x:ConnectionId='6' x:Name="password" HorizontalAlignment="Left" Margin="145,250,0,0"  VerticalAlignment="Top" Width="175"/>
        <Button x:ConnectionId='7' x:Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="190,360,0,0" VerticalAlignment="Top"                     />

    </Grid>
</Page>

